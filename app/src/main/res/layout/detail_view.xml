<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_school_name"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="0dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="School Name Missing" />

    <TextView
        android:id="@+id/tv_maths"
        android:layout_width="203dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="82dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Maths Score Missing" />

    <TextView
        android:id="@+id/tv_reading"
        android:layout_width="206dp"
        android:layout_height="34dp"
        android:layout_below="@+id/tv_maths"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="79dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Reading Score Missing"/>


    <TextView
        android:id="@+id/tv_writing"
        android:layout_width="204dp"
        android:layout_height="37dp"

        android:layout_below="@+id/tv_reading"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="78dp"
        android:text="Writing Score Missing"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lable_maths"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_school_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/tv_maths"
        android:text="Maths Score :-" />

    <TextView
        android:id="@+id/lable_reading"
        android:layout_width="103dp"
        android:layout_height="32dp"
        android:layout_below="@+id/lable_maths"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/tv_reading"
        android:text="Reading Score :-" />

    <TextView
        android:id="@+id/lable_writing"
        android:layout_width="107dp"
        android:layout_height="29dp"
        android:layout_below="@+id/lable_reading"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="7dp"
        android:layout_toStartOf="@+id/tv_writing"
        android:text="Writing Score:-" />


</RelativeLayout>